  "tools": [
    {"name":"scan","description":"Start en skannajobb"},
    {"name":"status","description":"Hent status for siste jobb"},
    {"name":"list","description":"List filer/duplikater"},
    {"name":"hash","description":"Hash en fil med BLAKE3"}
