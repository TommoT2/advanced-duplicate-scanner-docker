# Advanced Duplicate Scanner Environment Configuration

# Data path on host machine (Windows path)
DATA_PATH=C:/YourDataPath

# Database configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://scanner:your_secure_password_here@postgres:5432/duplicates

# Redis configuration
REDIS_URL=redis://redis:6379/0

# Scanner configuration
SCANNER_WORKERS=4
SCANNER_CHUNK_SIZE=8388608
LOG_LEVEL=INFO

# Application configuration
DEBUG=False
SECRET_KEY=change-this-in-production

# Cloud storage
RCLONE_CONFIG_PATH=/app/config/rclone.conf

# MCP Integration
MCP_ENABLED=True
MCP_TIMEOUT=30